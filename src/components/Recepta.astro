---

const { nom, foto, descripcio, Id } = Astro.props.dades;
---

<div class='border rounded-xl p-6 bg-[#F0F0F0] grid content-between'>
  <h1 class='text-xl font-bold text-center pb-4'>{nom}</h1>

  <img class='rounded-xl w-2/3 m-auto' src={foto} alt='' />
  <hr class='my-4' />
  <blockquote>
    {
      descripcio
        ?.replace(/\n/g, '*n*')
        .split('*n*')
        .map((e) => <>{e}</>)
    }
  </blockquote>
  <div class='mt-5 flex justify-between'>
    <a href={'/receptes/update/' + Id}
      ><button
        class='border-2 px-3 py-1 rounded-md text-sky-500 border-sky-500 hover:bg-sky-500 hover:text-white'
        >Actualizar</button
      ></a
    >

    <a href={'/receptes/eliminar/' + Id}
      ><button
        class='border-2 px-3 py-1 rounded-md text-red-500 border-red-500 hover:bg-red-500 hover:text-white'
        >Eliminar</button
      ></a
    >
  </div>
</div>
